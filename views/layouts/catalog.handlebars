<main>
    <h1>Thread Catalog</h1>

    {{#if threads}}
        <div class="thread-list">
            {{#each threads}}
                <p class="thread-link">
                    <a href="/graph/{{this.tuuid}}">{{this.ttext}}</a>
                </p>
            {{/each}}
        </div>
    {{else}}
        <p class="no-threads">
            No threads to display.
        </p>
    {{/if}}

    <div class='submit-form'>
        <form id='new-thread-form' method='post' action='/newthread'>
            <label for="ptxet">New Thread: </label><br/>
            <textarea id="ptext" name="ptext" rows='2' cols='64' maxlength='128'></textarea><br/>
            <button type="submit">New Thread</button>
        </form>
    </div>

</main>